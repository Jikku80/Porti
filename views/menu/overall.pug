extends baseMenu 

block content 

    h1.loader
        img.porti__of__img(src="/images/smalport.png", alt="porti__img")
        span Por
        span.grn t
        span.nocaps i
    if (user)
        if (!restro[0])
            .confirm__pg
                h1 You have not created a restaurant! Create and come back
                    a(href="/porti#crtMenu") Create Restaurante
        else
            include ../_header
            .whole__menu__sec
                .menu__section
                    if (menus.length === 0)
                        h2.banner.up__place__det You haven't Added Items to your Menu, Add Few Items!
                    #item__form
                        .itemform__head 
                            h2 Add Items To Menu
                            h2
                                a(href="#openMenu") Menu Link
                        form#addItem
                            .form__bod
                                label Food Name:
                                input#itemname(type="text" required placeholder="Chicken Burger")
                            .form__bod
                                label Price: 
                                input#itemprice(type="text" required placeholder="Rs. 150")
                            .form__bod
                                label Category: 
                                input#itemcat(type="text", required placeholder="Burger")
                            .form__bod
                                label Detail (optional):
                                textarea#itemdetail(rows="4" cols="50" placeholder="You can Describe about your food only if you want to, this field is optional...")
                            .form__bod.file_part
                                label(for="coverimage") Food Image:
                                input#coverimage(type="file" accept="image/*"  required)
                            button#addItemBtn.blackbtn Add Item
                    .your__item__sec#foodItemSec
                        h2.items__head Your Items 
                        p.currentid.hidden= user._id
                        .sub__item__bod
                            .sub__items.sec__items
                            .paginate 
                                button.prev Previous
                                button.next.hidden Next
                    .share__menu 
                        h2 Share your menu 
                        p.uname__menu.hidden= user.name
                        p.share__link

                    .qrcode__menu 
                        #qrcode 
                    .itemform__head 
                        h2 Update Restaurant Detail
                    form#upRestro.upItem
                        .form__bod
                            label Restaurant Name:
                            input#resname(type="text" required placeholder=restro[0].name)
                        .form__bod
                            label Address: 
                            input#resaddress(type="text" required placeholder=restro[0].Address)
                        .form__bod
                            label Slogan (optional): 
                            input#resslogan(type="text", placeholder=restro[0].slogan)
                        .form__bod
                            label Contact: 
                            input#resContact(type="number", placeholder=restro[0].phn_no)
                        .form__bod 
                            label Change Theme (optional):
                            select#menuThemes
                                option.opt(hidden selected)= restro[0].theme 
                                each item in theme 
                                    if (item.themeType === 'Free' || item.validMenuUser.includes(user.id))
                                        option.opt(value=`${item.themeId}`)= item.name
                        p.restro__len.hidden= restro.length
                        if (restro.length !== 0)
                            p.restro__id.hidden= restro[0]._id
                        else 
                            p.restro__id.hidden
                        button#updateResBtn.blackbtn Update Restaurant
                include ../_footer
    else 
        .confirm__pg
            h1 Please Sign In To Your Account !
            a(href="/login") Sign In

    script(src="/js/alert.js") 
    script(src="/js/menu/additem.js") 
    script(src="/js/qr.js")