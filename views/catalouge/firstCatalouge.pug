extends baseCatalouge 

block content
    h1.loader
        .bink
            img.porti__of__img(src="/images/smalport.png", alt="porti__img")
            span Por
            span.grn t
            span.nocaps i
    .catalouge__one__sec
        .background__cover 
            if (company.coverImage)
                img.company__cover(src=`${company.coverImage}`, alt="cover image")
            else 
                img.company__cover(src="/images/bg.png", alt="cover image")
            .navigator
                h1.blackbg= company.name
                p.comp__user__id.hidden= company.user._id
                if (company.themecolor !== "")
                    p.comp__color.hidden= company.themecolor
                else
                    p.comp__color.hidden #1A9ACC
                a.go__to__catalouge(href="#compcatalouge") Go To Catalouge
        .search__catalouge 
            form.catal__search
                input.catalouge__searchbar#catalougeSearch(type="text", required, placeholder="Type To Find Items")
        .all__items 
            h3.center.get__all__items All Items
        .cat__list 
            h2.center Items Categories | Group
            .categories__catalouge 
        .sub__cat__list 
            .sub__cat__opt
                h2.sub__cat__head Sub Categories | SGroup
                img.cancel__subModel(src="/images/cancel.png" alt="cancel")
            .sub__categories__catalouge
        #compcatalouge
            if (company.slogan !== "")
                h2.center= company.slogan
            .catalouge__item__bod
                .catalouge__items 
                    each item in catalouges
                        .catal__card
                            if (item.coverImage)
                                img(class="catal__card__img imgFull" loading="lazy" src=`${item.coverImage}` alt="catalouge__item__image")
                            else 
                                img(class="catal__card__img imgFull" loading="lazy" src=`/images/noimg.png` alt="catalouge__item__image")
                            .catal__card__det
                                .card__sub__sec
                                    .catal__card__head Name: 
                                    .card__dark__text.catal__name= item.name
                                .card__sub__sec
                                    .catal__card__head S.No: 
                                    .card__dark__text.catal__sno= item.serialno
                                .card__sub__sec
                                    .catal__card__head Price: 
                                    .card__dark__text.catal__price= `${item.currency}${item.price}`
                                .card__sub__sec
                                    .catal__card__head Group: 
                                    .card__dark__text= item.category
                                .card__sub__sec
                                    .catal__card__head SGroup: 
                                    .card__dark__text= item.subcategory
                                .card__sub__sec
                                    .catal__card__head Detail: 
                                    .card__dark__text= item.detail
        .paginate 
            button(type="button" name="prev__catal").prev__catal.pag__btn.blue Previous
            button(type="button" name="next__catal").next__catal.pag__btn.blue Next
        .company__footer 
            .footer__bod
                if (company.Address !== "")
                    h4.comp__cont Find Us At
                    p= company.Address 
                if (company.locationLink !== "")
                    a.comp__loc(href=`${company.locationLink}`)= `open ${company.name} Location`
                if (company.contact !== "")
                    h4.comp__cont Get In Touch With Us In 
                    h4= company.contact 
                .footer__mail__bod.footer__bod 
                    if (company.email !== "")
                        h4.comp__cont Email Us At 
                        p.comp__email= company.email 
                    if (company.social !== "")
                        h4 OR
                        h4.comp__cont Our Social Link 
                        h4
                            a.comp__loc(href=`${company.locationLink}`)= company.social

    script(src="/js/alert.js") 
    script(src="/js/catalouge/catalougeFeature.js") 