extends baseCatalouge 

block content
    h1.loader
        .bink
            img.porti__of__img(src="/images/smalport.png", alt="porti__img")
            span.td vPor
            span.grn t
            span.nocaps.td i
    if (user)
        if (catalouge.user.id == user.id)
            include ../_header
            .tweaks__bod
                .tweaks__sub__bod
                    p.hidden.themeUssr= user.theme
                    p.itemid.hidden= catalouge.id
                    p.curusrid.hidden= user.id
                    .itemform__head 
                        a.blackbtn(href=`/catalouge/${user._id}/additems` title="Add Items") Go Back
                        a.blackbtn(href=`/${user.name}` title="My Menu") My Catalouge
                    .center
                        .your__items__bod
                            .your__items
                                .catalouge__card
                    .up__items__detail
                        h2.items__head Update Item Detail
                        form.upItem
                            .form__bod
                                label.form__label Items Name:
                                input#upcatalitemname.form__input(type="text" value=catalouge.name required)
                            .form__bod
                                label.form__label(for="item_name") Currency Sign:        
                                input#upcatalitemcurrency.form__input(type="text" required value=catalouge.currency)
                            .form__bod
                                label.form__label Items Price: 
                                input#upcatalitemprice.form__input(type="text" value=catalouge.price required)
                            .form__bod
                                label.form__label Items Serial No: 
                                input#upcatalitemserialno.form__input(type="text" value=catalouge.serialno)
                            .form__bod
                                label.form__label Items Category: 
                                input#upcatalitemcat.form__input(type="text" value=catalouge.category required)
                            .form__bod
                                label.form__label Items Sub Category: 
                                input#upcatalitemsubcat.form__input(type="text" value=catalouge.subcategory)
                            .form__bod
                                label.form__label Detail (optional):
                                textarea#upcatalitemdetail.form__input(rows="4" cols="50" placeholder="You can Describe about your food only if you want to, this field is optional...")= catalouge.detail
                            if (company[0].theme !== "51eac6b471a284d3341d8c0c63d0f1a286262a18")
                                .form__bod 
                                    label.form__label Apply Discount (optional):
                                    if (catalouge.applydiscount === true)
                                        input#upcatalitemdiscount.checkbox(type="checkbox" checked="checked")
                                    else
                                        input#upcatalitemdiscount.checkbox(type="checkbox")
                                .form__bod 
                                    label.form__label Mark it as Hot Item (optional):
                                    if (catalouge.hotItem === true)
                                        input#upcatalhotItem.checkbox(type="checkbox" checked="checked")
                                    else
                                        input#upcatalhotItem.checkbox(type="checkbox")
                                .form__bod 
                                    label.form__label Stock Quantity :
                                    input#upcatalStockQuantity.form__input(type="number" value=catalouge.stockQuantity)
                            else 
                                #upcatalitemdiscount.hidden
                                #upcatalhotItem.hidden
                                #upcatalStockQuantity.hidden
                            .group__btn
                                button#upcatalItemBtn.smallbtn.ygbtn Update Item
                                a(href=`/catalouge/${user._id}/additems`).smallbtn.redbtn Cancel
                    .up__items__img
                        h2.items__head Update Items Image
                        form.upItem(action=`/api/v1/catalouge/${catalouge.id}/updateItemImage` method="post" enctype="multipart/form-data")
                            .form__bod.file_part
                                input#upcatalcoverimage.form__input(type="file" name="upcatalogimage" accept="image/*" required)
                            .group__btn
                                button#upcatalImgItemBtn.smallbtn.ygbtn Update Item Image  
                                a(href=`/catalouge/${user._id}/additems`).smallbtn.redbtn Cancel  
                    .del__items__sec 
                        h2.items__head Are You Sure You Want To Delete It?
                        .group__btn
                            button#delcatalItemBtn.smallbtn.redbtn Delete Item  
                            a(href=`/catalouge/${user._id}/additems`).smallbtn.ygbtn Cancel
        else 
            .confirm__pg 
                h1 You Dont Belong Here!!!
                a(href="/") Go Back
    else 
        .confirm__pg
            h1 Please Sign In To Your Account !
            a(href="/account/login") Sign In

    script(src="/js/alert.js")
    script(src="/js/catalouge/itemtweaks.js") 