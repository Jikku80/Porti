extends baselayout

block content
    .main
        .navbar
            ul.navbar__list
                <li class="navbar__list__li"> <a href="#about">About</a> </li>
                <li class="navbar__list__li"> <a href="#previous">Previous Works</a> </li>
                <li class="navbar__list__li"> <a href="#contact">Contact</a> </li>
            #heading
                h1= portfolio.name
        .first
            #about
                .about__body
                    h2= `About ${portfolio.name}`
                    p#abdetail= portfolio.about
                    
                    h3= `What ${portfolio.name} Do?`
                    p#abwhat= portfolio.what
                    h3= `Why ${portfolio.name} Do It?`
                    p#abwhy= portfolio.why
        .first
            #previous
                .prev
                    h2 Previous Accomplishment Details
                    p= portfolio.previous
                .prev__cont
                    .prev__cont__sub
                        img.imgsnd.imgFull(src=`/images/ports/imageCover/${portfolio.imageCover}`, alt="firs_image")
                        h3#zr__head= portfolio.firstImgHead
                    .prev__cont__sub
                        img.imgsnd.imgFull(src=`/images/ports/imageSecond/${portfolio.imageSecond}`, alt="second_img")
                        h3#fst__head= portfolio.secondImgHead
                    .prev__cont__sub
                        img.imgsnd.imgFull(src=`/images/ports/imageThird/${portfolio.imageThird}`, alt="third_img")
                        h3#send__head= portfolio.thirdImgHead
                    .prev__cont__sub
                        img.imgsnd.imgFull(src=`/images/ports/imageFourth/${portfolio.imageFourth}`, alt="fourth_img")
                        h3#thrd__head= portfolio.fourthImgHead
                    .prev__cont__sub
                        img.imgsnd.imgFull(src=`/images/ports/imageFifth/${portfolio.imageFifth}`, alt="fifth_img")
                        h3#forth__head= portfolio.fifthImgHead
        .first
            #contact
                h2 Contact
                .bgbox
                    if (portfolio.showNo === true)
                        .contbox
                            p= `Phone: ${portfolio.phn_no}`
                    .contbox
                        p= `Email-id: ${portfolio.email}`
                    if (portfolio.fb != "")
                        .cont
                            a(href=`${portfolio.fb}`)
                                if (portfolio.user.photo)
                                    img.profPic(src=`/images/users/${portfolio.user.photo}`, alt="prof__pic")
                                else 
                                    img.profPic.satProf(src="/images/bighitman.png", alt="prof__pic")

        #footer 
            p= `${portfolio.name} portfolio`
            a#gtop(href="#")
                img(src="/images/bup.png", alt="up_arrow")

    script(src=`/js/layouts/first.js`) 