.land__update
    button#update_port.redbtn.upMarg Update Portfolio
    #update_form.hidden.upform.land__farst
        .upform__head 
            h1 Update Your Portfolio 
            img.cancel(src="/images/cancel.png", alt="cancel_img")
        form#upPort
            .form__bod
                label Portfolio Name:
                input#upname(type="text" name="name" value=`${portfolio.name}` required)
            .form__bod
                label About You:
                textarea#upabout(rows="4" cols="50" name="about" required)= portfolio.about
            .form__bod
                label What You Do:
                textarea#upwhat(rows="4" cols="50" name="what" required)= portfolio.what
            .form__bod
                label Why You Do It:
                textarea#upwhy(rows="4" cols="50" name="why" required)= portfolio.why
            label Contact Details:
            .form__bod
                label Phone Number: 
                input#upno(type="number" value= `${portfolio.phn_no}` name="phn_no" required)
            .form__bod
                label Show Your Phone Number: 
                if (portfolio.showNo === true)
                    input#upCheck(type="checkbox" checked="checked")
                else
                    input#upCheck(type="checkbox") 
            .form__bod 
                label Change Theme 
                select#themes
                    option.opt(hidden selected)= portfolio.theme 
                    option.opt(value="a9993e364706816aba3e25717850c26c9cd0d89d") PL Layout 
                    option.opt(value="589c22335a381f122d129225f5c0ba3056ed5811") BG Layout
                    option.opt(value="481743d632b80d39bc2771d19be3ca3005b3f8af") ST Layout
                    option.opt(value="d798d4338adeb553a1089a58e61e18c2fcdf77bb") BS Layout
            .form__bod
                label Email Address:
                input#upemail(type="email" value=`${portfolio.email}` name="email" required)
            .form__bod
                label Your Social Media Profile Link: 
                input#upFb(type="text" value=`${portfolio.fb}`)
            .form__bod
                label Address: 
                input#upLoc(type="text" value=`${portfolio.location}`)
            .form__bod
                label Detail:
                textarea#upwork(rows="4" cols="50" name="previous" required)= portfolio.previous
            button#updateBtn.redbtn Update
    
    button#update_Img.redbtn.upMarg Update Portfolio Images
    #update_ImgForm.hidden.upform
        form#upImage
            .upform__head 
                h1 Update Your Port Images
                img.cancl(src="/images/cancel.png", alt="cancel_img")
            .form__bod.file_part
                input#img1(type="file" accept="image/*" name="img1", required)
                label Heading: 
                input#firstImg(type="text" value= `${portfolio.firstImgHead}` name="firstImgHead")
            .form__bod.file_part
                input#img2(type="file" accept="image/*" name="img2", required)
                label Heading: 
                input#secondImg(type="text" value= `${portfolio.secondImgHead}` name="secondImgHead")
            .form__bod.file_part
                input#img3(type="file" accept="image/*" name="img3", required)
                label Heading: 
                input#thirdImg(type="text" value= `${portfolio.thirdImgHead}` name="thirdImgHead")
            .form__bod.file_part
                input#img4(type="file" accept="image/*" name="img4", required)
                label Heading: 
                input#fourthImg(type="text" value= `${portfolio.fourthImgHead}` name="fourthImgHead")
            .form__bod.file_part
                input#img5(type="file" accept="image/*" name="img5", required)
                label Heading: 
                input#fifthImg(type="text" value= `${portfolio.fifthImgHead}` name="fifthImgHead")

            button#updateImgBtn.redbtn Update

