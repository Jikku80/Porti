.land__update
    button#update_portSec.redbtn.upMarg Update Portfolio
    #update_formSec.hidden.upform.land__secd
        .upform__head 
            h1 Update Your Portfolio 
            img.cancelSec(src="/images/cancel.png", alt="cancel_img")
        form#upPortSec
            .form__bod
                label.form__label Portfolio Name:
                input#upnameSec.form__input(type="text" name="name" value=`${portfolio.name}` required)
            .form__bod
                label.form__label About You:
                textarea#upaboutSec.form__input(rows="4" cols="50" name="about" required)= portfolio.about
            .form__bod
                label.form__label What You Do:
                textarea#upwhatSec.form__input(rows="4" cols="50" name="what" required)= portfolio.what
            .form__bod
                label.form__label Why You Do It:
                textarea#upwhySec.form__input(rows="4" cols="50" name="why" required)= portfolio.why
            label Contact Details:
            .form__bod
                label.form__label Phone Number: 
                input#upnoSec.form__input(type="number" value= `${portfolio.phn_no}` name="phn_no" required)
            .form__bod
                label.form__label Show Your Phone Number: 
                if (portfolio.showNo === true)
                    input#upCheckSec.checkbox(type="checkbox" checked="checked")
                else
                    input#upCheckSec.checkbox(type="checkbox") 
            .form__bod
                label.form__label Occupation:
                input#upoccSec.form__input(type="text" name="name" value=`${portfolio.role}` required)
            .form__bod 
                label.form__label Show your Portfolio in Search
                if (portfolio.searchVisible === true)
                    input#upSearchVisibleSec.checkbox(type="checkbox" checked="checked")
                else
                    input#upSearchVisibleSec.checkbox(type="checkbox")
            .form__bod 
                label.form__label Change Theme 
                select#themeSec
                    option.opt(hidden selected)= portfolio.theme
            .form__bod
                label.form__label Email Address:
                input#upemailSec.form__input(type="email" value=`${portfolio.email}` name="email" required)
            .form__bod
                label.form__label Your Social Media Profile Link: 
                input#upFbSec.form__input(type="text" value=`${portfolio.fb}`)
            .form__bod
                label.form__label Address: 
                input#upLocSec.form__input(type="text" value=`${portfolio.location}`)
            .form__bod
                label.form__label Country: 
                input#upcount.form__input(type="text" value=`${portfolio.country}`)
            .form__bod 
                label.form__label Protect Picture (Add watermark) : 
                if (portfolio.watermark === true)
                    input#upwatermarkSec.checkbox(type="checkbox" checked="checked")
                else
                    input#upwatermarkSec.checkbox(type="checkbox")
            button#updateBtnSec.redbtn.bigbtn Update

    button#update_ImgCollec.redbtn.upMarg Update Portfolio Images
    #update_ImgFormCollec.hidden.upform
        .upform__head 
            h1 Update Your Port Images
            img.canclCollec(src="/images/cancel.png", alt="cancel_img")
        form#upImageCollec(action="/update/portImgCollec" method="post" enctype="multipart/form-data")
            .form__bod
                input#img1Collec(type="file" accept="image/*" multiple name="upimagescollec", required)
                input.hidden(type="text" value=`${portfolio.id}` name="upportid" )
            button#updateImgBtnCollec.redbtn.bigbtn Update

script(src="/js/layouts/landing2.js") 
