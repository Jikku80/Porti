            h1 Update Your Portfolio 
            img.cancelInvi2.pointer(src="/images/cancel.png", alt="cancel_img")
        form#upInvite2.inviF
            .form__bod
                label First Person Name:
                input#upinname2(type="text" name="name" value=`${invite.fname}` required)
            .form__bod
                label Second Person Name:
                input#upinsname2(type="text" name="name" value=`${invite.sname}` required)
            .form__bod
                label Your Story:
                textarea#upinabout2(rows="4" cols="50" name="about" required)= invite.about
            .form__bod
                label Venue:
                input#upinwhat2( name="what" value=`${invite.address}` required)
            .form__bod
                label Date:
                input#upinwhy2(name="why" value= `${invite.pdate}` required)
            .form__bod 
                label Change Theme 
                select#inthemes2.thim
                    option.opt(hidden selected)= invite.theme 
            .form__bod
                label Time:
                input#upinwork2(name="previous" value= `${invite.ptime}` required)
            button#updateinBtn2.redbtn Update
    
