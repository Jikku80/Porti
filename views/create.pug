extends base

block content
    if (user)
        .port__nav
            .port__nav__first
                a.port__head(href="/me")
                    if (user.photo)
                        img.userDp.profPic(src=`/images/users/${user.photo}`, alt="prof__pic")
                    else 
                        img.userDp.profPic.satProf(src="/images/hitman.png", alt="prof__pic")
                a.port_sec_head(href="/")
                    h1 Tech 
                        span Mafia
                #logout.logout
                    img(src="/images/poweroff.png", alt="signout")
            .port__nav__sub 
                a(href=`/myportfolio/${user._id}`)
                    img(src="/images/porti.png", alt="view_port")
                    span#usId.hidden= user._id
                a(href=`/invitations/${user._id}`)
                    img(src="/images/invite.png", alt="view_port")
                    span#uiId.hidden= user._id
        .port__bod.port__section
            h2 Create a portfolio
            p Pick any of the layouts below and build your portfolio in just minutes! Fill the Form and Your All Set
            p To create You will need 4-5 prior work images or if no prior works add your certificates/degrees your glories, pride :)
            .layout__main
                #layout1.unl
                    .un_layout_log
                        img(src="/images/layout1.gif", alt="layout1")
                        p PL Layout
                #layout2.unl
                    .un_layout_log
                        img(src="/images/layout2.gif", alt="layout2")
                        p BG Layout
                #layout3.unl
                    .un_layout_log
                        img(src="/images/layout3.gif", alt="layout3")
                        p ST Layout
                #layout4.unl
                    .un_layout_log
                        img(src="/images/layout4.gif", alt="layout4")
                        p BS Layout
                #layout5.unl
                    .un_layout_log
                        img(src="/images/layout5.gif", alt="layout5")
                        p AT Layout (you can upload upto 20 images)
                #layout6.unl
                    .un_layout_log
                        img(src="/images/layout6.gif", alt="layout6")
                        p NI Layout (no image required)
        .invi__section 
            h2 Create Invitation
            p Pick any of the layouts below and build your Invitation Card in just minutes! Fill the Form and Your All Set
            p To create You will need 4-5 images :)
            .layout__main
                #invi1.unl
                    .un_layout_log
                        img(src="/images/invi1.gif", alt="invi1")
                        p MRG Layout
                #invi2.unl
                    .un_layout_log
                        img(src="/images/invi2.png", alt="invi2")
                        p INI Layout
    else 
        .port__nav__second.small__nav
            h1 Please login or Signup to Create Your Portfolio!
            a.login(href="/login") LogIn | SignUp
        .port__bod
            h2 Create a portfolio | You are not Logged In!
            p Pick any of the layouts below and build your portfolio in just minutes! Fill the Form and Your All Set
            p To create You will need 4-5 prior work images or if no prior works add your certificates/degrees your glories, pride :)
            .layout__main
                .un_layout
                    img(src="/images/layout1.gif", alt="layout1")
                    p PL Layout
                .un_layout
                    img(src="/images/layout2.gif", alt="layout2")
                    p BG Layout
                .un_layout
                    img(src="/images/layout3.gif", alt="layout3")
                    p ST Layout
                .un_layout 
                    img(src="/images/layout4.gif", alt="layout1")
                    p BS Layout
                .un_layout
                    img(src="/images/layout5.gif", alt="layout5")
                    p AT Layout (you can upload upto 20 images)
                .un_layout
                    img(src="/images/layout6.gif", alt="layout6")
                    p NI Layout (no image required)
        .invi__section 
            h2 Create Invitation | You are not Logged In
            p Pick any of the layouts below and build your Invitation Card in just minutes! Fill the Form and Your All Set
            p To create You will need 4-5 images :)
            .layout__main
                .un_layout
                    img(src="/images/invi1.gif", alt="invi1")
                    p MRG Layout
                .un_layout
                    img(src="/images/invi2.png", alt="invi2")
                    p INI Layout
    img.loader.hidden(src="/images/loading.gif", alt="loader")
    
    script(src="/js/alert.js")
    script(src="/js/logout.js") 
    script(src="/js/createInvi/viewIn.js") 
    script(src="/js/createPort/createport.js")
    script(src="/js/createPort/createport2.js")
    script(src="/js/createPort/createport3.js")
    script(src="/js/createPort/createport4.js") 
    script(src="/js/createPort/createport5.js")  
    script(src="/js/createPort/createport6.js") 
    script(src="/js/createInvi/createinvi.js")
    script(src="/js/createInvi/createinvi2.js") 