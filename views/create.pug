extends base

block content
    h1.loader
        img.porti__off__img(src="/images/smalport.png", alt="porti__img")
        span Por
        span.grn t
        span.nocaps i

    if (!user)
        .confirm__pg
            h1 Please Sign In To Your Account !
            a(href="/login") Sign In
    else 
        include _header
        #usId.hidden= user._id
        #uiId.hidden= user._id
        .creation__body
            .catalouge__section.newsec
                if (!company && !catalouge)
                    h2 Create Catalouge For Your Business 
                    p Pick any of the layouts below and buid a Catalouge 
                    .gGroup 
                        .freeSec.whitebtn.catalgbtn#freeCatalgBtn Unlocked
                        .paidSec.whitebtn.catalgbtn#lockedCatalgBtn Locked
                    .layout__main#freeCatalgSec
                        #catal1.unl
                            .un_layout_log
                                a(href=`/catalouge/${user._id}/additems`)
                                    img(src="/images/catal1.png", loading="lazy", alt="catalouge1")
                                p CT Layout
                    .layout__main#lockedCatalgSec 
                        .unl
                else 
                    .noti__sec
                        .sticky__section
                            h2 You Already have A Catalouge!
                            p.warn You can't have more than one Catalouge!
                        if (!company)
                            .sticky__section 
                                h2.warn You Haven't Updated Your Company Details! 
                        if (!catalouge)
                            .sticky__section 
                                h2.warn You Haven't added items to your cataloge!
                    .gGroup 
                        .freeSec.whitebtn.catalgbtn#freeCatalgBtn Unlocked
                        .paidSec.whitebtn.catalgbtn#lockedCatalgBtn Locked
                    .layout__main#freeCatalgSec 
                        .un_layout 
                            img(src="/images/catal1.png", loading="lazy", alt="invi2")
                            p CT Layout
                    .layuot__main#lockedCatalgSec 
                        .un_layout
            .menu__section
                if (!restro && !menu)
                    h2 Create Menu For Your Restro 
                    p Pick any of the layouts below and buid a menu for your restro 
                    .gGroup 
                        .freeSec.whitebtn.menubtn#freeMenuBtn Unlocked
                        .paidSec.whitebtn.menubtn#lockedMenuBtn Locked
                    .layout__main#freeMenuSec
                        #menu1.unl
                            .un_layout_log
                                a(href=`/menu/${user._id}/additemstomenu`)
                                    img(src="/images/menu1.png", loading="lazy", alt="menu1")
                                p DC Layout
                    .layout__main#lockedMenuSec 
                        .unl
                else 
                    .noti__sec
                        .sticky__section
                            h2 You Already have A Menu!
                            p.warn You can't have more than one Menu!
                        if (!restro)
                            .sticky__section 
                                h2.warn You Haven't Updated Your Restro Details! 
                        if (!menu)
                            .sticky__section 
                                h2.warn You Haven't added items to your menu!
                    .gGroup 
                        .freeSec.whitebtn.menubtn#freeMenuBtn Unlocked
                        .paidSec.whitebtn.menubtn#lockedMenuBtn Locked
                    .layout__main#freeMenuSec
                        .un_layout
                            img(src="/images/menu1.png", loading="lazy", alt="menu1")
                            p DC Layout
                    .layout__main#lockedMenuSec 
                        .un_layout
            .invi__section#crtInvi
                h2 Create Invitation
                p Pick any of the layouts below and build your Invitation Card in just minutes! Fill the Form and Your All Set
                .gGroup 
                    .freeSec.whitebtn.invitebtn#freeInviBtn Unlocked
                    .paidSec.whitebtn.invitebtn#lockedInviBtn Locked
                .layout__main#freeInviSec
                    each item in theme
                        if (item.themeCategory === "Invitation" && item.themeType === 'Free' || item.validInviUser.includes(user.id))
                            .unl.invi__layouts(id=`${item.themeId}`)
                                .un_layout_log
                                    img(src=`/images/themeImage/${item.picture}`, loading="lazy", alt="invi1")
                                    p= item.name
                .layout__main#lockedInviSec 
                    .unl
            if (portfolio)
                .port__bod.port__section
                    .noti__sec
                        .sticky__section
                            h2 You Already have A Portfolio!
                            p.warn You can't have more than one portfolio!
                        if (portfolio.theme !== 'da98568d1b2005611973ad49868b38aa8ae68fd7' && portfolio.theme !== '836b9b955a98e0f2e2d678c179696d6ac53356eb')
                            if (!portfolioImage)
                                .sticky__section 
                                    h2.warn You Haven't Uploaded Any Previous Work Image 
                    p Need tips Creating Your Portfolio Go To 
                        a.portDet(href="/#portiHelper") Porti Helper
                    .gGroup 
                        .freeSec.whitebtn.glassbtn#freePortSec Unlocked
                        .paidSec.whitebtn.glassbtn#lockedPortSec Locked
                    .layout__main#freeItems
                        each item in theme
                            if (item.themeCategory === "Portfolio" && item.themeType === 'Free' || item.validUser.includes(user.id))
                                .un_layout
                                    img(src=`/images/themeImage/${item.picture}`, loading="lazy", alt="layout1")
                                    p= item.name
                        .un_layout
                            img(src="/images/layout5.png", loading="lazy", alt="layout5")
                            p AT Layout (you can upload upto 20 images)
                    .layout__main#lockedItems
                        each item in theme
                            if (item.themeCategory === "Portfolio" && item.paid === false)
                                if (!item.validUser.includes(user.id))
                                    .un_layout
                                        a(href=`/paywith/${item.themeId}`)
                                            img(src=`/images/themeImage/${item.picture}`, loading="lazy", alt="layout1")
                                        p= item.name
                                        p.layout__price= item.price
                                        a.redbtn(href=`/paywith/${item.themeId}`) Unlock
            else
                .port__bod.port__section#crtPort
                    h2 Create a portfolio
                    p Pick any of the layouts below and build your portfolio in just minutes! Fill the Form and Your All Set
                    p Need tips Creating Your Portfolio Go To 
                        a.portDet(href="/#portiHelper") Porti Helper
                    .gGroup 
                        .freeSec.whitebtn.glassbtn#freePortSec Unlocked
                        .paidSec.whitebtn.glassbtn#lockedPortSec Locked
                    .layout__main#freeItems
                        each item in theme
                            if (item.themeCategory === "Portfolio" && item.themeType === 'Free' || item.validUser.includes(user.id))
                                .portunl(id=`${item.themeId}`)
                                    .un_layout_log
                                        img(src=`/images/themeImage/${item.picture}`, loading="lazy", alt="layout1")
                                        p.layout__name(id=`${item.name}`)= item.name
                        #layout5.unl
                            .un_layout_log
                                img(src="/images/layout5.png", loading="lazy", alt="layout5")
                                p AT Layout (you can upload upto 20 images)

                    .layout__main#lockedItems
                        each item in theme
                            if (item.themeCategory === "Portfolio" && item.paid === false)
                                if (!item.validUser.includes(user.id))
                                    .un_layout 
                                        a(href=`/paywith/${item.themeId}`)
                                            img(src=`/images/themeImage/${item.picture}`)
                                        p.layout__name= item.name 
                                        p.layout__price= item.price
                                        a.redbtn(href=`/paywith/${item.themeId}`) Unlock
                script(src="/js/createPort/createForm.js") 
                script(src="/js/createPort/createport.js")
                script(src="/js/createPort/createport5.js")  
            script(src="/js/createInvi/createInviForm.js") 
            script(src="/js/createInvi/createinvi.js")
            //- script(src="/js/logout.js")
    script(src="/js/layouts/portForAll.js") 
    script(src="/js/alert.js")